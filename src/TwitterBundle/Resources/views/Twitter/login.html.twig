{% extends 'TwitterBundle::layout.html.twig' %}

{% block title 'Twitter - Login' %}

{% block main %}
    <div class="login">
        {% if success_message %}
              <div class="text-success">{{success_message}}</div>
        {% endif %}
        {% if fail_message %}
              <div class="text-danger">{{fail_message}}</div>
        {% endif %} 
        <h3>Welcome to Twitter</h3>
        <form method="post" action="">
            <div class="form-group">
                <input name="username" class="form-control" placeholder="Username">
            </div>
            <div class="form-group">
                <input name="password" type="password" class="form-control" placeholder="Password">
            </div> 
            <input name="submit" type="submit" class="btn btn-default" value="Log in">
        </form>
        <a href="{{ path('_signup') }}">Sign up</a>
    </div>
{% endblock %}